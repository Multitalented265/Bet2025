// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  status        String    @default("Active") // e.g., Active, Suspended
  balance       Decimal   @default(50000.00)
  joined        DateTime  @default(now())
  notifyOnBetStatusUpdates Boolean @default(true)

  bets         Bet[]
  transactions Transaction[]
  image        String?
}

model Candidate {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  image     String
  totalBets Decimal  @default(0.00)
  status    String   // e.g., Active, Withdrawn
  hint      String
  color     String   // e.g., #FF0000
  bets      Bet[]
}

model Bet {
  id            String   @id @default(cuid())
  userId        String
  candidateName String
  amount        Decimal
  placedDate    DateTime @default(now())
  status        String   @default("Pending") // e.g., Pending, Won, Lost

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  candidate Candidate @relation(fields: [candidateName], references: [name], onDelete: Cascade)

  @@index([userId])
  @@index([candidateName])
}

model Transaction {
  id      String   @id @default(cuid())
  type    String   // Deposit or Withdrawal
  amount  Decimal
  fee     Decimal  @default(0.00)
  date    DateTime @default(now())
  userId  String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model SupportTicket {
  id      String   @id @default(cuid())
  user    Json     // Store user name and email as JSON
  subject String
  message String
  date    DateTime @default(now())
  status  String   @default("Open") // Open, Closed
}

model AdminSettings {
  id                 Int     @id @default(1)
  enable2fa          Boolean @default(false)
  notifyOnNewUser    Boolean @default(true)
  notifyOnLargeBet   Boolean @default(false)
  notifyOnLargeDeposit Boolean @default(true)
}
