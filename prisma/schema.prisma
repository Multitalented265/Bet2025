// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  joined      DateTime @default(now())
  status      String   @default("Active") // "Active" | "Suspended"
  totalBets   Float    @default(0)
  bets        Bet[]
  transactions Transaction[]

  @@map("users")
}

model Candidate {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  image     String
  hint      String
  color     String
  totalBets Float    @default(0)
  status    String   @default("Active") // "Active" | "Withdrawn"
  bets      Bet[]

  @@map("candidates")
}

model Bet {
  id            String   @id @default(cuid())
  amount        Float
  placedDate    DateTime @default(now())
  status        String   @default("Pending") // "Pending" | "Won" | "Lost"
  
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  candidateName String
  candidate     Candidate @relation(fields: [candidateName], references: [name'])

  @@map("bets")
}

model Transaction {
  id      String   @id @default(cuid())
  type    String // "Deposit" | "Withdrawal"
  amount  Float
  fee     Float
  date    DateTime @default(now())
  
  userId  String
  user    User     @relation(fields: [userId], references: [id])

  @@map("transactions")
}

model SupportTicket {
  id        String   @id @default(cuid())
  userName  String
  userEmail String
  subject   String
  message   String
  date      DateTime @default(now())
  status    String   @default("Open") // "Open" | "Closed"

  @@map("support_tickets")
}
